
@{
    ViewData["Title"] = "Fifth";
}

<h1>Fifth</h1>
<div class="row">
    <div class="col-3">

    </div>
    <div class="col-6">
        <form name="formUpload">
            <div class="mb-3">
                <label for="photo" class="form-label">選擇檔案</label>
                <input class="form-control" type="file" id="photo" name="photo">
                <div id="div-preivew">
                    <img src="#" id="preview" alt="預覽圖"/>
                </div>
            </div>
            <input type="submit" class="btn btn-primary" value="提交" id="submit"/>
        </form>
    </div>
    <div class="col-3"></div>
</div>
@section Styles{
    <style>
        #div-preivew{
            width:300px;
            height:200px;
            visibility:hidden;
            margin:10px;
        }
        #preview{
            object-fit: cover;
            width:100%;
            height:100%;
        }
    </style>
}
@section Scripts{
<script>
    const xhr = new XMLHttpRequest();
    const input  = document.getElementById("photo")
        console.log(document.formUpload)
        input.addEventListener('change',()=>{ //有變動的狀況
            
            if(input.files.length ===0){
            //無上傳檔案，div不顯示
            $("#div-preivew").css("visibility","hidden")
            }else{
            //有上傳檔案，div顯示，圖片顯示

            var reader = new FileReader();
            reader.readAsDataURL(input.files[0])
            reader.addEventListener('load',(e)=>{
                $("#div-preivew").css("visibility", "visible")
            
                $("#preview").attr("src",e.target.result)
            })
            
            }
        })
        //表單點擊送出
        $("#submit").click(()=>{
            event.preventDefault()
            var xhr = new XMLHttpRequest();
            
            var formData = new FormData(document.formUpload);
            formData.append('file',input.files[0])
            
            xhr.open('POST', '/api/UploadProfilePhoto')
            xhr.send(formData)

            xhr.addEventListener('load',()=>{
               const result = xhr.responseText
               alert(result)
            })
        })
</script>
}


